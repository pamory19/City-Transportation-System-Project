<mapper namespace="com.solvd.citytransportationsystemproject.dao.ITrainDao">

    <?xml version="1.0" encoding="UTF-8" ?>

    <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <resultMap id="trainResultMap" type="com.solvd.citytransportationsystemproject.models.Train">
        <id property="id" column="id"/>
        <result property="make" column="make"/>
        <result property="model" column="model"/>
        <result property="year" column="year"/>
        <result property="capacity" column="capacity"/>
        <result property="driverId" column="driver_id"/>
        <result property="trainHeadcode" column="train_headcode"/>
        <result property="vehicleId" column="vehicle_id"/>
    </resultMap>

    <select id="getTrainByTrainHeadcode" parameterType="String" resultMap="trainResultMap">
        SELECT * FROM trains WHERE train_headcode = #{trainHeadcode}
    </select>

    <select id="getAllTrains" resultMap="trainResultMap">
        SELECT * FROM trains
    </select>

    <insert id="insert" parameterType="com.solvd.citytransportationsystemproject.models.Train">
        INSERT INTO trains (id, make, model, year, capacity, driver_id, train_headcode, vehicle_id) VALUES (#{id}, #{make}, #{model}, #{year}, #{capacity}, #{driverId}, #{trainHeadcode}, #{vehicleId})
    </insert>

    <update id="update" parameterType="com.solvd.citytransportationsystemproject.models.Train">
        UPDATE trains SET make = #{make}, model = #{model}, year = #{year}, capacity = #{capacity}, driver_id = #{driverId}, train_headcode = #{trainHeadcode}, vehicle_id = #{vehicleId} WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="com.solvd.citytransportationsystemproject.models.Train">
        DELETE FROM trains WHERE id = #{id}
    </delete>

</mapper>
